{
  "name": "@bentley/itwinui",
  "version": "0.1.0",
  "author": "Bentley Systems",
  "license": "MIT",
  "main": "src/index.scss",
  "description": "CSS (Sass/SCSS) library for building beautiful and well working web UI components within Bentley Systems & iTwin.js applications.",
  "homepage": "https://bentleycs.visualstudio.com/UX%20Design/_git/iTwin%20UI",
  "url" : "https://dev.azure.com/bentleycs/UX%20Design/_boards/board/t/UX%20Standards%20and%20Visuals/Backlog%20items",
  "email" : "3b7617b6.bentley.onmicrosoft.com@amer.teams.ms",
  "keywords": [
    "css",
    "sass",
    "scss",
    "html",
    "react",
    "ui",
    "ux",
    "standards",
    "theme",
    "light",
    "dark",
    "bentley systems",
    "itwin"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn test && lint-staged"
    }
  },
  "lint-staged": {
    "*.{tsx,ts,jsx,js,html,json}": [
      "yarn pretty",
      "git add"
    ]
  },
  "scripts": {
    "build": "yarn clean && yarn build:scss && yarn build:css && yarn build:jss && yarn copy-files",
    "build:scss": "cpx \"./src/**/*.scss\" ./lib/scss",
    "build:css": "tsc ./scripts/src/compile.ts --outDir ./scripts/ && node ./scripts/compile.js",
    "build:jss": "tsc ./scripts/src/makeJss.ts --outDir ./scripts && node ./scripts/makeJss.js lib/css lib/jss",
    "watch": "chokidar \"{src,scripts/src,backstop/tests}/**/*\" -c \"yarn build\" --initial",
    "copy-files": "cpx package.json lib && cpx README.md lib",
    "clean": "rimraf ./lib ./tests/results/bitmaps_test ./tests/results/engine_scripts",
    "lint": "node ./scripts/lint.js",
    "pretty": "prettier --config .prettierrc --write",
    "approve": "backstop --config=./backstop/backstop.js approve",
    "test": "yarn build && backstop --config=./backstop/backstop.js test --docker",
    "bump": "bump --prompt --all --commit --no-verify",
    "develop": "yarn build && backstop --config=./backstop/backstop.js test --filter"
  },
  "devDependencies": {
    "backstopjs": "^4.0.3",
    "chokidar-cli": "^1.2.2",
    "compare-versions": "^3.4.0",
    "cpx": "^1.5.0",
    "husky": "^1.3.1",
    "jss-cli": "^5.0.2",
    "lint-staged": "^8.1.4",
    "log-symbols": "^2.2.0",
    "node-sass": "^4.13.0",
    "prettier": "^1.15.3",
    "prettier-stylelint": "^0.4.2",
    "rimraf": "^2.6.2",
    "run-func": "^1.0.2",
    "stylelint": "^9.9.0",
    "stylelint-scss": "^3.4.0",
    "typescript": "^3.3.3333",
    "version-bump-prompt": "^4.3.0"
  }
}
